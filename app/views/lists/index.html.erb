<div class="header">
  <%= link_to "Add a new list" , new_list_path, class: "btn btn-primary" %>
  <%= link_to "All movies", movies_path, class: "btn btn-secondary" %>
</div>
<div class="banner">
  <div class="index-banner">
    <p class="h1 display-4">Your lists</p>
    <p class="lead">Save your movies here!</p>
  </div>
</div>

  <div class="list-container grid-container">
        <% @lists.each do |list| %>
          <div class="card list-card grid-item" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url('<%= cl_image_path list.photo.key if list.photo.attached? %>')">
            <%= link_to list.name , list_path(list) %>
          </div>
        <% end %>
  </div>

