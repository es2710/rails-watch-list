<div class="index-banner banner">
  <h1>Save your movies here</h1>
</div>


<h2>My lists</h2>
<%= link_to "Add a new list" , new_list_path, class: "btn btn-primary" %>
<div class="list-container grid-container">
      <% @lists.each do |list| %>
        <div class="list-card grid-item" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url('<%= cl_image_path list.photo.key if list.photo.attached? %>')">
          <%= link_to list.name , list_path(list) %>
        </div>
      <% end %>
</div>

