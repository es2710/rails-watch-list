<div class="banner">
  <h1>Save your movies here</h1>
</div>


<div class="list-container">
  <h2>My lists</h2>
  <div class="lists">
      <% @lists.each do |list| %>
        <div class="list-card">
          <%= link_to list.name , list_path(list) %>
        </div>
      <% end %>
  </div> 
  <%= link_to "Add a new list" , new_list_path, class: "btn btn-primary" %>
</div>

