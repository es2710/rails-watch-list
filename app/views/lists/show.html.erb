 <div class="header">
  <%=link_to "Add a movie", new_list_bookmark_path(@list), class: "btn btn-primary"%>
  <%=link_to "Back",  lists_path, class: "btn btn-secondary"%>
</div>
<div class="banner">
  <div class="index-banner" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url('<%= cl_image_path @list.photo.key if @list.photo.attached?%>')">
    <p class="h1 display-4"><%=@list.name%></p>
    <p class="lead">We have them all in one place!</p>
  </div>
</div>

<div class="">
  <div class="grid-container">
      <% @list.bookmarks.each do |bookmark| %>
        <div class="card grid-item">
          <img class="card-img-top" src= <%=bookmark.movie.poster_url%> alt="">
            <div class="card-body">
              <h5 class="card-title"><%=bookmark.movie.title%></h5>
              <h6> <%= bookmark.movie.rating %> ⭐️  </h6>  
              <p class="card-text"><%=bookmark.movie.overview%></p>
              <h5 class="card-title" >Comments</h5>
              <p> <%= bookmark.comment%></p>
            </div>
            <div class="card-btn">
              <%=link_to "Delete",
                          bookmark_path(bookmark),
                          method: :delete,
                          class: "btn btn-danger align-self-end " %>
            
            </div>
        </div>
      <%end%>
  </div>
</div>

