<div class="show-banner banner" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url('<%= cl_image_path @list.photo.key %>')">
</div>
<%=link_to "Add a movie", new_list_bookmark_path(@list), class: "btn btn-primary"%>
  <%=link_to "back",  lists_path, class: "btn btn-primary"%>


<div class="container grid-container">
    <% @list.bookmarks.each do |bookmark| %>
      <div class="card grid-item">
        <img class="card-img-top" src= <%=bookmark.movie.poster_url%> alt="">
          <div class="card-title-div">
            <h5 class="card-title"><%=bookmark.movie.title%> , <%= bookmark.movie.rating %> ⭐️  </h5>
          </div>
        
        <p class="card-text"><%=bookmark.movie.overview%></p>
        <h5 class="card-title" >Comments</h5>
        <p> <%= bookmark.comment%></p>
            <%=link_to "Delete",
                        bookmark_path(bookmark),
                        method: :delete %>
      </div>
    <%end%>
<div class="footer">
  
</div>
</div>
